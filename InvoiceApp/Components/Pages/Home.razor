@page "/"
@inject InvoiceApp.Services.UserService UserService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer


<PageTitle>Home</PageTitle>

<div class="row">
    <div>
        <h3 class="float-start">My Invoice Centre</h3>
    </div>
</div>
<p>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addExpenseModal" style="height:60px;font-weight:bold">
        <i class="bi bi-plus-square"></i>  Quick-Add An Expense</button>
</p>
<hr />

<div class="row d-flex align-items-stretch">
    <div class="col-md-4 d-flex flex-column">
        <div class="card flex-fill">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">My Submissions</h5>
                <p class="card-text">These are the expenses that I submitted for approval and processing.</p>
                <div class="mt-auto w-100">
                    <p><a href="#" class="btn btn-primary mt-auto w-100 d-flex align-items-center justify-content-center" style="height:60px">See Current Items</a></p>
                    <p><a href="#" class="btn btn-secondary mt-auto w-100 d-flex align-items-center justify-content-center" style="height:60px">See History</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 d-flex">
        <div class="card flex-fill">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">My Approvals</h5>
                <p class="card-text">These are the expenses that I have been asked to approve.</p>
                <div class="mt-auto w-100">
                    <p><a href="#" class="btn btn-primary mt-auto w-100 d-flex align-items-center justify-content-center" style="height:60px">See Current Items</a></p>
                    <p><a href="#" class="btn btn-secondary mt-auto w-100 d-flex align-items-center justify-content-center" style="height:60px">See History</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 d-flex">
        <div class="card flex-fill">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">My Processing</h5>
                <p class="card-text">These are the expenses that need to be processed and paid.</p>
                <div class="mt-auto w-100">
                    <p><a href="#" class="btn btn-primary mt-auto w-100 d-flex align-items-center justify-content-center" style="height:60px">See Current Items</a></p>
                    <p><a href="#" class="btn btn-secondary mt-auto w-100 d-flex align-items-center justify-content-center" style="height:60px">See History</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<InvoiceApp.Components.Pages.ExpensePages.QuickAddExpense OnClose="RefreshExpenses" />


