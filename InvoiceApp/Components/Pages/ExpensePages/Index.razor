@page "/expenses"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using InvoiceApp.Models
@using InvoiceApp.Data
@implements IAsyncDisposable
@inject IDbContextFactory<InvoiceApp.Data.ApplicationDbContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="expenses/create">Create New</a>
</p>
<style>
    .table tr, .table td {
        padding: 2px;
        margin: 2px;
    }
</style>
<table class="table">
    <thead>
    <th>Vendor</th>
    <th>Total Amount</th>
    <th>Total HST</th>
    <th>Action</th>
    </thead>
    @foreach (Expense expense in context.Expenses)
    {
        <tr>
            <td style="vertical-align: middle;margin:0px">@expense.Vendor</td>
            <td style="vertical-align: middle;">@expense.TotalAmount</td>
            <td style="vertical-align: middle;">@expense.TotalHst</td>
            <td style="vertical-align: middle;">
                <a class="btn btn-primary" href="@($"expenses/edit?id={expense.Id}")"><i class="bi bi-pencil-square"></i> Edit</a> |
                <a class="btn btn-danger" href="@($"expenses/delete?id={expense.Id}")"><i class="bi bi-trash3-fill"></i> Delete</a>
            </td>
        </tr>
    }

</table>


